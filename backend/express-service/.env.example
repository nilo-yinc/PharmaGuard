NODE_ENV=production
# PORT is injected by Render in production; keep local default only.
PORT=3000

# Primary frontend URL (used for auth redirects)
FRONTEND_URL=https://your-frontend.vercel.app

# Comma-separated list for CORS allowlist
FRONTEND_URLS=https://your-frontend.vercel.app,http://localhost:5173,http://localhost:3000
ALLOW_VERCEL_PREVIEWS=true
VERCEL_FRONTEND_PREFIX=your-frontend

# MongoDB
MONGO_URI=mongodb://localhost:27017/pharma_guard

# JWT
JWT_SECRET=change-me
JWT_EXPIRY=24h

# Backend base URL
BACKEND_BASE_URL=https://your-node-service.onrender.com

# FastAPI service URL
FASTAPI_URL=https://your-python-service.onrender.com

# SMTP for email verification / reset password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
SENDER_EMAIL=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-node-service.onrender.com/api/v1/users/google/callback
GOOGLE_JWKS_URL=https://www.googleapis.com/oauth2/v3/certs
