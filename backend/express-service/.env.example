NODE_ENV=development
PORT=3000

# Comma-separated list for CORS (supports local + deployed frontend)
FRONTEND_URL=http://localhost:5173

# MongoDB
MONGO_URI=mongodb://localhost:27017/pharma_guard

# JWT
JWT_SECRET=change-me
JWT_EXPIRY=24h

# Backend base URL for verification links
BACKEND_BASE_URL=http://localhost:3000

# FastAPI integration (optional; fallback mode is used if unreachable)
FASTAPI_URL=http://localhost:8000

# SMTP for email verification / reset password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
SENDER_EMAIL=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/users/google/callback
GOOGLE_JWKS_URL=https://www.googleapis.com/oauth2/v3/certs
